<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7ED"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:background="#DBCBCB"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settings_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Your Code"
            android:textColor="#D89398"
            android:textSize="25dp" />

        
        
        <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/startup_code_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="#FFDDBC"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal" >

        <requestFocus/>
    </EditText>

    <ImageButton
        android:id="@+id/update_button"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerVertical="false"
        android:layout_marginRight="45dp"
        android:layout_marginTop="35dp"
        android:background="#FFDDBC"
        android:onClick="goAction"
        android:scaleType="fitXY"
        android:src="@drawable/go_image"
        android:text="Button" />

</RelativeLayout>
        
        <Button
            android:id="@+id/startup_new_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="#D8A06E"
            android:onClick="newgroupaction"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="New Group" />

    </LinearLayout>

</LinearLayout>
